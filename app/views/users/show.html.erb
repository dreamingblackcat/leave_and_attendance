<div class="user-show-container panel callout radius">
	<h3 class="text-center"><%= @user.name %></h3>
	<div class="row">
		<div class="large-3 columns">
			 <%= image_tag(@user.avatar_url)  %>
		</div>
		<div class="large-6 columns">
		  	<p><%= @user.email %></p>
		  	<p><%= @user.password %></p>
		  	<p><%= @user.password_confirmation %></p>
		  	<p><%= @user.joined_date %></p>
		  	<p><%= @user.employee_no %></p>
		  	<p><%= @user.nationality %></p>
		  	<p><%= @user.religion %></p>
		  	<p><%= @user.gender %></p>
		  	<p><%= @user.address %></p>
		  	<p><%= @user.phone_no %></p>
		  	<p>"<%= @user.blood_type %>"</p>
		  	<p><%= @user.team.name %></p>
		  	<p><%= link_to "Back", users_path, class: 'button large success' %></p>

		</div>
	</div>
</div>
