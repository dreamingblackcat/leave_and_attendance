<div class="row">
	<div class="large-5 large-offset-4 columns">
		<div class="container panel callout radius">
			<p>
			  <strong>Application date:</strong>
			  <%= @leave_application.application_date %>
			</p>

			<p>
			  <strong>User:</strong>
			  <%= @leave_application.user %>
			</p>

			<p>
			  <strong>Leave Dates:</strong>
			  <% @leave_application.leave_dates.each do|ld| %>
				<p class="secondary label radius"><%= ld.date %> => <%= ld.leave_period %></p>
			  <% end %>
			</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="large-5 large-offset-4 columns">
		<div class="row">
			<div class="large-6 columns">
				<%= link_to 'Edit', edit_leave_application_path(@leave_application),class: 'button large alert text-center' %> 
			</div>
			<div class="large-6 columns">
				<%= link_to 'Back', leave_applications_path , class: 'button large success text-left' %>
			</div>
			
		</div>
	</div>
</div>


