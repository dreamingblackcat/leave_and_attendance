<h1 class="text-center">Listing leave_applications</h1>
<div class="row">
  <div class="large-4 large-offset-3 columns">
    <div class="user-show-container panel callout radius">
      <table>
  <thead>
    <tr>
      <th>Application date</th>
      <th>User</th>
      <th>Leave Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_applications.each do |leave_application| %>
      <tr>
        <td><%= leave_application.application_date %></td>
        <td><%= leave_application.user.name%></td>
        <td>
            <% leave_application.leave_dates.each do|ld| %>
                <%= ld.date %> ,
            <% end %>
        </td>
        <td><%= link_to 'Show', leave_application %></td>
        <td><%= link_to 'Edit', edit_leave_application_path(leave_application) %></td>
        <td><%= link_to 'Destroy', leave_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leave application', new_leave_application_path,class: 'button large success radius' %>
    </div>
  </div>
</div>

